<Window x:Class="MathPractiseApplication.View.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MathPractiseApplication.View"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="LoginView" Height="550" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">
    <Border CornerRadius="40">
        <Border.Background>
            <ImageBrush ImageSource="../Images/Background.png" Stretch="Fill"/>
        </Border.Background>
        <Border 
            CornerRadius="15"
            BorderThickness="3"
            Opacity="0.93"
            Padding="0,5,0,0">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">

                    <GradientStop Color="#DD58D6" Offset="0"/>
                    <GradientStop Color="#DB005B" Offset="0.5"/>
                    <GradientStop Color="#4942E4" Offset="0.8"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#1a0e50" Offset="0.01"/>



                    <GradientStop Color="#060431" Offset="0.75"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="15"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="ВОЙТИ"
                           Foreground="DarkGray"
                           FontSize="18"
                           Style="{StaticResource Montserrat}"
                           Cursor="Hand"
                           VerticalAlignment="Center"
                           Margin="15,0,0,0"/>

                <Button
                    x:Name="Minimazebtn"
                    Grid.Column="1"
                    BorderThickness="0"
                    Content="-"
                    Cursor="Hand"
                    Foreground="White"
                    FontSize="18"
                    Click="Minimazebtn_Click">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="Indigo"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border CornerRadius="30" Height="25" Width="25"
                                        Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button
                    x:Name="Closebtn"
                    Grid.Column="2"
                    BorderThickness="0"
                    Content="x"
                    Cursor="Hand"
                    Foreground="White"
                    FontSize="14"
                    Click="Closebtn_Click">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="MediumVioletRed"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border CornerRadius="30" Height="25" Width="25"
                                        Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <StackPanel Width="300"
                            Grid.Row="2"
                            Orientation="Vertical"
                            Margin="0,35,0,0">

                    <Image Width="150" Height="150" Source="../Images/MathIcon.png"/>
                    <TextBlock Text="MATHPRACTISE"
                               Foreground="White"
                               FontSize="25"
                               FontWeight="Medium"
                               Style="{StaticResource Montserrat}"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,15"/>
                    <TextBlock Text="Данное приложение поможет вам познать основы математики"
                               Foreground="LightGray"
                               FontSize="14"
                               FontWeight="Medium"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Margin="0,0,0,20"
                               Style="{StaticResource Montserrat}"/>
                    <TextBlock Text="Username"
                               Foreground="DarkGray"
                               FontSize="14"
                               FontWeight="Medium"
                               Style="{StaticResource Montserrat}"/>
                    <StackPanel Orientation="Horizontal" 
                                Height="28"
                                Margin="0,5,0,20">
                        <materialDesign:PackIcon Kind="User" Width="25" Height="25" Foreground="White"/>
                        <TextBox Name="UserName"
                             FontSize="14"
                             Foreground="White"
                             CaretBrush="LightGray"
                             BorderBrush="DarkGray"
                             Background="Transparent"
                             BorderThickness="0,0,0,1"
                             VerticalAlignment="Center"
                             Style="{StaticResource Montserrat}"
                             Width="270"
                             materialDesign:HintAssist.Hint="Enter username"/>
                    </StackPanel>


                    <TextBlock Text="Password"
                               Foreground="DarkGray"
                               FontSize="14"
                               FontWeight="Medium"
                               Style="{StaticResource Montserrat}"/>
                    <TextBox Name="UserPassword"
                             FontSize="14"
                             Background="Transparent"
                             Foreground="White"
                             CaretBrush="LightGray"
                             BorderBrush="DarkGray"
                             BorderThickness="0,0,0,1"
                             Height="28"
                             VerticalAlignment="Center"
                             Margin="0,5,0,20"
                             Padding="20,0,0,0"
                             Style="{StaticResource Montserrat}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Border>
    
</Window>
